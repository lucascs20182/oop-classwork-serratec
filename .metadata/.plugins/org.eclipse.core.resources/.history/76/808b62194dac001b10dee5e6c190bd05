package org.serratec.app;

import java.time.LocalDate;

import org.serratec.excecoes.CpfRepetidoException;

public class Funcionario extends Pessoa {
	private double salarioBruto;
	private double descontoInss;
	private double descontoIR;
	private Dependente[] dependentes = null;

	public Funcionario(String nome, String cpf, LocalDate dataNascimento,
			double salarioBruto, double descontoInss, double descontoIR) throws CpfRepetidoException {
		super(nome, cpf, dataNascimento);
		this.salarioBruto = salarioBruto;
		this.descontoInss = descontoInss;
		this.descontoIR = descontoIR;
	}

	public double getSalarioBruto() {
		return salarioBruto;
	}

	public double getDescontoInss() {
		return descontoInss;
	}

	public double getDescontoIR() {
		return descontoIR;
	}
}
