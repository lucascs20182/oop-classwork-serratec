package org.serratec.app;

import java.time.LocalDate;

import org.serratec.excecoes.CpfRepetidoException;

public class Dependente extends Pessoa {
	TipoParentesco parentesco;

	public Dependente(String nome, String cpf, LocalDate dataNascimento, TipoParentesco parentesco)
			throws CpfRepetidoException {
		super(nome, cpf, dataNascimento);
		this.parentesco = parentesco;
	}
	
	private static boolean isDependentUnderEighteenYearsOld(LocalDate dataNascimento) throws CpfRepetidoException {
		LocalDate hoje = LocalDate.now();
		int idade = hoje.getYear() - dataNascimento.getYear();
		
		if(hoje.getMonthValue() < dataNascimento.getMonthValue()) {
			idade--;
		}
		
//		throw new CpfRepetidoException();
		return false;
	}
}
